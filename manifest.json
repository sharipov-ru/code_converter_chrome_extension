{
  "name": "Code converter",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Extension helps you to convert selected JS/CSS/HTML code to CoffeeScript/SASS/HAML",
  "background": {
    "scripts": ["libs/jquery.min.js", "build/application.js"]
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "http://html2haml.heroku.com/",
    "http://css2sass.heroku.com/",
    "http://git.rordev.ru/",
    "http://*/*"
  ],
  "content_scripts":[{
    "matches": ["http://*/*"],
    "css": ["css/popup.css"],
    "js": ["libs/jquery.min.js", "build/popup.js"]
  }]
}
